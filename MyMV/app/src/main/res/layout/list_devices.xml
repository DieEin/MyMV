<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView android:id="@+id/paired_devices_text_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/paired_devices_text"
        android:visibility="gone"
        android:background="#669"
        android:textColor="#fff"
        />

    <ListView android:id="@+id/paired_devices_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"/>

    <TextView android:id="@+id/discovered_devices_text_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/discovered_devices_text"
        android:visibility="gone"
        android:background="#669"
        android:textColor="#fff"
        />

    <ListView android:id="@+id/discovered_devices_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"/>

    <Button android:id="@+id/scan_button_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/scan_button"
        />

</LinearLayout>
